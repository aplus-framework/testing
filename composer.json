{
    "name": "aplus/testing",
    "description": "Aplus Framework Testing Library",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "test",
        "testing",
        "unit",
        "phpunit",
        "testcase",
        "mvc"
    ],
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "homepage": "https://aplus-framework.com/packages/testing",
    "support": {
        "email": "support@aplus-framework.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/testing/issues",
        "forum": "https://aplus-framework.com/forum",
        "source": "https://gitlab.com/aplus-framework/libraries/testing",
        "docs": "https://docs.aplus-framework.com/guides/libraries/testing/"
    },
    "funding": [
        {
            "type": "Aplus Sponsor",
            "url": "https://aplus-framework.com/sponsor"
        }
    ],
    "require": {
        "php": ">=8.1",
        "aplus/mvc": "^3.0",
        "phpunit/phpunit": "~9.5"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.14",
        "ergebnis/composer-normalize": "^2.25",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Framework\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Testing\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
