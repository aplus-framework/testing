{
    "name": "aplus/testing",
    "type": "library",
    "description": "Aplus Framework Testing Library",
    "keywords": [
        "test",
        "testing",
        "unit",
        "phpunit",
        "testcase",
        "mvc"
    ],
    "homepage": "https://docs.aplus-framework.com/guides/libraries/testing/",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "aplus/mvc": "dev-master",
        "phpunit/phpunit": "^9.5"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.9",
        "ergebnis/composer-normalize": "^2.15",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Testing\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "natanfelles@gmail.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/testing/issues",
        "wiki": "https://gitlab.com/aplus-framework/libraries/testing/wikis/home",
        "source": "https://gitlab.com/aplus-framework/libraries/testing",
        "docs": "https://docs.aplus-framework.com/guides/libraries/testing/"
    }
}
